{% extends 'template.html.twig' %}

{% block title %}Hello ProfilController!
{% endblock %}

{% block body %}

	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main>
				<div class="card mb-4">
					<div class="card-header">
						<i class="fas fa-table me-1"></i>
						<h3>Liste des profils</h3>
						<a href="{{path('app_add_profil')}}">
							<button
								class="btn btn-primary float-end">
								{# <i class="fa-solid fa-plus"></i> #}
								Nouveau profil
							</button>
						</a>
					</div>
					<div class="card-body">
						<table id="datatablesSimple">
							<thead>
								<tr>
									<th>Nom du profil</th>
									<th>Roles</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Nom du profil</th>
									<th>Roles</th>
									<th>Actions</th>
								</tr>
							</tfoot>
							<tbody>
								{% for profil in profils %}
									<tr>
										<td>{{profil.nomProfil}}</td>
										<td>
											{% if profil.roles is not empty %}
												{% for role in profil.roles %}
													<span>-{{role.NomRole}}
													</span><br>
												{% endfor %}
											{% endif %}
										</td>
										<td>
											<a href="{{ path('app_update_profil', {'id': profil.id}) }}">
												<button style="background-color:green;border-width:0;color:white;">
													<i class="fa-regular fa-pen-to-square"></i>
												</button>
											</a>
											<a href="{{ path('app_delete_profil', {'id': profil.id}) }}" class="delete-button">
												<button style="background-color:red;border-width:0;color:white">
													<i class="fa-solid fa-trash"></i>
												</button>
											</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</main>
		</div>
	</div>
{% endblock %}

{% block javascript %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="js/scripts.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
	<script src="assets/demo/chart-area-demo.js"></script>
	<script src="assets/demo/chart-bar-demo.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
	<script src="js/datatables-simple-demo.js"></script>
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}
