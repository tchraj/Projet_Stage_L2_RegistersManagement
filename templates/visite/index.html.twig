{% extends 'template.html.twig' %}

{% block title %}Visites
{% endblock %}
{% block body %}
	<h1>Liste des visites</h1>
	<div class="overflow-x-auto">
		<div class="flex items-center  bg-gray-100 font-sans overflow-hidden">
			<div class="w-full lg:w-5/6">
				<div class="bg-rose-300 shadow-md rounded my-6">
					<table class="min-w-max w-full table-auto">
						<thead>
							<tr class="bg-blue-400  text-sm leading-normal">
								<th class="py-3 px-6 text-left">Date</th>
								<th class="py-3 px-6 text-left">Heure d'arrivée</th>
								<th class="py-3 px-6 text-center">Heure de départ</th>
								<th class="py-3 px-6 text-center">Visiteur</th>
								<th class="py-3 px-6 text-center">Employe visité</th>
								<th class="py-3 px-6 text-center">Etat</th>
								<th class="py-3 px-6 text-center">Motif</th>
								<th class="py-3 px-6 text-center">Actions</th>
							</tr>
						</thead>
						<tbody class="text-gray-600 text-sm font-light">
							{% for visite in visites %}
								<tr class="border-b border-blue-200 hover:bg-gray-100">
									<td class="py-3 px-6 text-left whitespace-nowrap">
										<div class="flex items-center">
											<span class="font-medium">
												{{ visite.DateVisite|date("d-m-Y")}}
											</span>
										</div>
									</td>
									<td class="py-3 px-6 text-left">
										<div class="flex items-center">
											<span>{{visite.HeureDeb}}</span>
										</div>
									</td>
									<td class="py-3 px-6 text-left">
										<div class="flex items-center">
											<span>{{visite.HeureFin}}</span>
										</div>
									</td>
									<td class="py-3 px-6 text-left">
										<div class="flex items-center">
											<span>{{visite.nomVisiteur}}</span>
										</div>
									</td>
									<td class="py-3 px-6 text-left">
										<div class="flex items-center">
											<span>{{visite.EmployeVisite}}</span>
										</div>
									</td>
									<td class="py-3 px-6 text-left">
										<div class="flex items-center">
											<span>{{visite.Motif}}</span>
										</div>
									</td>
									<td class="py-3 px-6 text-left">
										<div class="flex items-center">
											<span>{{visite.EtatVisite}}</span>
										</div>
									</td>
									<td class="">
										<div class="flex item-center justify-center">
											<a href="{{ path('app_update_visite',{'id':visite.id}) }}">
												<div class="w-4 mr-2 transform hover:text-purple-500 hover:scale-110">
													<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewbox="0 0 24 24" stroke="currentColor">
														<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/>
													</svg>
												</div>
											</a>
										</div>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>{% endblock body  %}
