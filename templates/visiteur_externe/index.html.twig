{% extends 'template.html.twig' %}

{% block title %}Visiteurs externes
{% endblock title %}

{% block body %}
	<div class="card mb-4">
		<div class="card-header" style="display:flex;justify-content:space-around">
			<i class="fas fa-table me-1"></i>
			<h3>Liste des visiteurs externes</h3>
			<a href="{{path('app_add_employe')}}">
				<input type="button" value="Nouveau visiteur" class="btn btn-success">
			</a>
		</div>
		<div class="card-body">
			<table id="datatablesSimple">
				<thead>
					<tr>
						<th>Nom</th>
						<th>Prenoms</th>
						<th>Email</th>
						<th>Télephone</th>
						{#Age#}
						<th>Actions</th>
					</tr>
				</thead>
				<tfoot>
					<tr>
						<th>Nom</th>
						<th>Prenoms</th>
						<th>Email</th>
						<th>Télephone</th>
						{#Age#}
						<th>Actions</th>
					</tr>
				</tfoot>
				<tbody>
					{% for visiteur in visiteurs %}
						<tr>
							<td>
								{{ visiteur.Nom }}
							</td>
							<td>{{visiteur.prenoms}}</td>
							<td>{{visiteur.email}}</td>
							<td>{{visiteur.tel}}</td>
							<td>
								<a href="{{path('app_lier_visiteur',{'id':visiteur.id})}}" class="btn btn-primary">Lier à une visite</a>
								<a href="{{path('app_update_visiteur',{'id':visiteur.id})}}" class="btn btn-warning">Modifier</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	{% endblock body %}
