{% extends 'template.html.twig' %}

{% block title %}Visiteurs externes
{% endblock title %}

{% block body %}
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main>
				<div class="card mb-4">
					<div class="card-header">
						<i class="fas fa-table me-1"></i>
						<h3>Liste des visiteurs externes</h3>
					</div>
					<div class="card-body">
						<table id="datatablesSimple">
							<thead>
								<tr>
									<th>Nom</th>
									<th>Prenoms</th>
									<th>Email</th>
									<th>Télephone</th>
									{#Age#}
									<th>Actions</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Nom</th>
									<th>Prenoms</th>
									<th>Email</th>
									<th>Télephone</th>
									{#Age#}
									<th>Actions</th>
								</tr>
							</tfoot>
							<tbody>
								{% for visiteur in visiteurs %}
									<tr>
										<td>
											{{ visiteur.Nom }}
										</td>
										<td>{{visiteur.prenoms}}</td>
										<td>{{visiteur.email}}</td>
										<td>{{visiteur.tel}}</td>
										<td>
											<a href="{{path('app_add_visite')}}">Lier à une visite</a>
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</main>
		</div>
	</div>
	{# <a href="{{ path('app_update_visiteur',{'id':vis.id}) }}">
