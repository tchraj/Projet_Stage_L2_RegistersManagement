{% extends 'template.html.twig' %}
{% block body %}
	<div id="layoutSidenav">
		<div id="layoutSidenav_content">
			<main>
				<div class="card mb-4">
					<div class="card-header" style="display:flex;justify-content:space-around">
						<i class="fas fa-table me-1"></i>
						<h3>Liste des Directions</h3>
						<a href="{{path('app_add_direction')}}">
							<input type="button" value="Nouvelle direction" class="btn btn-success">
						</a>
					</div>
					<div class="card-body">
						<table id="datatablesSimple">
							<thead>
								<tr>
									<th>Nom de la direction</th>
									<th>Filiale asociée</th>
									<th>Actions</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Nom de la direction</th>
									<th>Filiale asociée</th>
									<th>Actions</th>
								</tr>
							</tfoot>
							<tbody>
								{% for dir in directions %}
									<tr>
										<td>{{dir.NomDirection}}</td>
										<td>{{dir.filiale}}</td>
										<td>
											<a href="{{ path('app_update_direction', {'id': dir.id}) }}">
												<button style="background-color:green;border-width:0;color:white;">
													<i class="fa-regular fa-pen-to-square"></i>
												</button>
											</a>

										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</div>
			</main>
		</div>
	</div>
{% endblock body %}

{% block javascript %}
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
	<script src="js/scripts.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
	<script src="assets/demo/chart-area-demo.js"></script>
	<script src="assets/demo/chart-bar-demo.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/simple-datatables@7.1.2/dist/umd/simple-datatables.min.js" crossorigin="anonymous"></script>
	<script src="js/datatables-simple-demo.js"></script>
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
{% endblock %}
