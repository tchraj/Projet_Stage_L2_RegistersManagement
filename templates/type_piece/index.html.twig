{% extends 'template.html.twig' %}

{% block title %}Hello
{% endblock %}

{% block body %}
	<h1 style="font-size:25px; font-weight:bold;">Liste des pieces</h1>
	<div class="px-4 md:px-10 py-4 md:py-7 bg-gray-100 dark:bg-gray-700 rounded-tl-lg rounded-tr-lg">
		<div class="sm:flex items-end justify-between">
			<div>
				<button style="background-color:yellow;" class="focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 inline-flex sm:ml-3 mt-4 sm:mt-0 items-end justify-start px-4 py-3 bg-Yellow-400 hover:bg-yellow focus:outline-none rounded">
					<a href=" {{ path('app_add_piece') }} ">
						<p class="text-sm font-medium leading-none text-dark" style="font-weight:bold;">Nouvelle piece</p>
					</a>
				</button>
			</div>
		</div>
	</div>
	<div class="bg-white dark:bg-gray-800  shadow px-4 md:px-10 pt-4 md:pt-7 pb-5 overflow-y-auto">
		<table class="w-full whitespace-nowrap">
			<thead>
				<tr tabindex="0" class="focus:outline-none h-16 w-full text-sm leading-none text-gray-800 dark:text-white ">
					<th class=" text-left pl-4">Nom de la piece</th>
					<th class=" text-left pl-4">Num√©ro de la piece</th>
					<th class=" text-left pl-16">Editer</th>
				</tr>
			</thead>
			<tbody class="w-full">
				{% for piece in pieces %}
					<tr tabindex="0" class="focus:outline-none h-20 text-sm leading-none text-gray-800 dark:text-white  bg-white dark:bg-gray-800  hover:bg-gray-100 dark:hover:bg-gray-900  border-b border-t border-gray-100 dark:border-gray-700 ">
						<td class="pl-4 cursor-pointer">
							<div class="flex items-center">
								<div class="pl-14">
									<p class="font-medium">{{piece.NomPiece}}</p>
								</div>
							</div>
						</td>
						<td class="pl-4 cursor-pointer">
							<div class="flex items-center">
								<div class="pl-14">
									<p class="font-medium">{{piece.NumPiece}}</p>
								</div>
							</div>
						</td>
						<td class="pl-20">
							<button class="focus:ring-2 focus:ring-offset-2 focus:ring-indigo-600 inline-flex sm:ml-3 mt-4 sm:mt-0 items-end justify-start px-2 py-2 bg-green-700 hover:bg-indigo-600 focus:outline-none rounded text-white">
								<a href="{{ path('app_update_piece', {'id': piece.id }) }}">
									<p style="font-weight:bold;" class="font-medium mb-1">Modifier</p>
								</a>
							</button>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>{% endblock body  %}
