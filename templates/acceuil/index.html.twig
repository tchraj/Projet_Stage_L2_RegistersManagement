{% extends "template.html.twig" %}

{% block body %}

	<div>
		<canvas id="myChart"></canvas>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

	<script>
		const ctx = document.getElementById('myChart');

// Utilisez AJAX pour récupérer les données de votre contrôleur Symfony
// Par exemple :
fetch("{{ path('app_acceuil') }}").then(response => response.json()).then(data => {
new Chart(ctx, {
type: 'pie',
data: {
labels: data.labels,
datasets: [
{
label: '# Visites par mois',
data: data.visits,
backgroundColor: 'rgba(75, 192, 192, 0.2)',
borderColor: 'rgba(75, 192, 192, 1)',
borderWidth: 1
},
]
},
options: {
scales: {
y: {
beginAtZero: true
}
}
}
});
});
	</script>

{% endblock %}


