{% block title %}{% endblock %}
{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
	{% endfor %}
	<link href="css/styles.css" rel="stylesheet"/>
	<script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
	<body class="bg-primary">
		<div id="layoutAuthentication">
			<div id="layoutAuthentication_content">
				<main>
					<div class="container">
						<div class="row justify-content-center">
							<div class="col-lg-7">
								<div class="card shadow-lg border-0 rounded-lg mt-5">
									<div class="card-header">
										<h3 class="text-center font-weight-light my-4">Creer un compte</h3>
									</div>
									<div class="card-body">
										<form method="post">
											{{ form_start(registrationForm) }}
											<div class="form-floating mb-3">
												{{ form_widget(registrationForm.username) }}
											</div>
											<div class="form-floating mb-3 mb-md-0">
												{{ form_widget(registrationForm.password) }}
											</div>
											<div class="form-floating mb-3 mb-md-0">
												{{ form_widget(registrationForm.agreeTerms) }}
											</div>
										</form>
									</div>
									<button type="btn" style="">{{ form_end(registrationForm) }}</button>
									
								</div>

							</div>
							<div class="card-footer text-center py-3">
								<div class="small">
									<a href="{{ path('app_login')}}">Avez-vous deja un compte? Connectez-vous</a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</main>
	</body>
</div></body></div></body></div><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script><script src="js/scripts.js"></script>{% endblock %}
